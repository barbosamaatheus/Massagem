<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.dynatron.projeto.massagem.Fragments.DespesaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="4dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="3dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                >

                <EditText
                    android:id="@+id/descricaoD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Descrição da Despesa"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/dataD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/descricaoD"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Data da Despesa"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/valorD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/dataD"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Valor"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/cadastrarD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/valorD"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="Cadastrar" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/pbD"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>
